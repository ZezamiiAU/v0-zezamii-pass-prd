# =============================================================================
# Zezamii Pass - Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values
# cp .env.example .env.local

# =============================================================================
# Database (Supabase)
# =============================================================================
# Get these from your Supabase project settings
POSTGRES_URL=postgres://postgres.[ref]:[password]@aws-1-ap-southeast-2.pooler.supabase.com:6543/postgres?sslmode=require
POSTGRES_URL_NON_POOLING=postgres://postgres.[ref]:[password]@aws-1-ap-southeast-2.pooler.supabase.com:5432/postgres?sslmode=require
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
POSTGRES_DATABASE=postgres
POSTGRES_HOST=db.[ref].supabase.co

# =============================================================================
# Supabase
# =============================================================================
SUPABASE_URL=https://[ref].supabase.co
NEXT_PUBLIC_SUPABASE_URL=https://[ref].supabase.co
SUPABASE_JWT_SECRET=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_ANON_KEY=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# =============================================================================
# Stripe
# =============================================================================
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Webhook signing secret - get from Stripe Dashboard > Webhooks > select endpoint > Signing secret
# Required for production webhook verification
STRIPE_WEBHOOK_SECRET=whsec_...

# =============================================================================
# Google Wallet (Optional)
# =============================================================================
# Get these from Google Cloud Console > Google Wallet API
WALLET_CLASS_ID=
WALLET_ISSUER_ID=
GOOGLE_WALLET_SA_JSON=

# =============================================================================
# Email (Optional - for notifications)
# =============================================================================
# Get from https://resend.com
RESEND_API_KEY=re_...
EMAIL_FROM=noreply@yourdomain.com
EMAIL_REPLY_TO=support@yourdomain.com

# =============================================================================
# App Configuration
# =============================================================================
APP_ORIGIN=https://your-app.vercel.app
NEXT_PUBLIC_VERCEL_URL=your-app.vercel.app
NEXT_PUBLIC_APP_ORIGIN=https://your-app.vercel.app

# Admin token for protected endpoints
ADMIN_TOKEN=

# Support email shown to users
NEXT_PUBLIC_SUPPORT_EMAIL=support@yourdomain.com

# =============================================================================
# Lock/Rooms Integration (Optional)
# =============================================================================
LOCK_API_URL=
LOCK_PROPERTY_ID=
LOCK_WEBHOOK_TOKEN=
LOCK_CALLBACK_SECRET=

# =============================================================================
# Development Options
# =============================================================================
# Set to "true" to enable development mode features
PASS_DEV_MODE=
